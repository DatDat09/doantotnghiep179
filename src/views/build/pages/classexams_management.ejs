        // Function to show edit dialog with data
        function showDialog_edit(classId, teacherId, ngayThi, kipThi, phongThi, id) {
            let dialog = document.getElementById("dialog_edit");
            dialog.classList.remove('hidden');

            // Populate modal fields with current data
            let classIdInput = document.querySelector("#dialog_edit select[name='classId']");
            let teacherIdInput = document.querySelector("#dialog_edit select[name='teacherId']");
            let ngayThiInput = document.querySelector("#dialog_edit input[name='ngayThi']");
            let kipThiInput = document.querySelector("#dialog_edit input[name='kipThi']");
            let phongThiInput = document.querySelector("#dialog_edit input[name='phongThi']");
            let idInput = document.querySelector("#dialog_edit input[name='id']");

            classIdInput.value = classId;
            teacherIdInput.value = teacherId;
            ngayThiInput.value = ngayThi;
            kipThiInput.value = kipThi;
            phongThiInput.value = phongThi;
            idInput.value = id;

            // Show the dialog
            document.getElementById("button_edit").classList.remove('hidden');
            document.getElementById("button_add").classList.add('hidden');
        }

        // Function to hide the edit dialog
        function hideDialog_edit() {
            let dialog = document.getElementById("dialog_edit");
            dialog.classList.add('hidden');
        }

        // Function to show add dialog
        function showDialog_add() {
            let dialog = document.getElementById("dialog_edit");
            dialog.classList.remove('hidden');

            // Clear input fields
            document.querySelector("#dialog_edit select[name='classId']").value = "";
            document.querySelector("#dialog_edit select[name='teacherId']").value = "";
            document.querySelector("#dialog_edit input[name='ngayThi']").value = "";
            document.querySelector("#dialog_edit input[name='kipThi']").value = "";
            document.querySelector("#dialog_edit input[name='phongThi']").value = "";
            document.querySelector("#dialog_edit input[name='id']").value = "";

            // Show add button, hide edit button
            document.getElementById("button_edit").classList.add('hidden');
            document.getElementById("button_add").classList.remove('hidden');
        }

        // Function to handle adding new data
        async function addNewData() {
            const classId = document.querySelector("#dialog_edit select[name='classId']").value;
            const teacherId = document.querySelector("#dialog_edit select[name='teacherId']").value;
            const ngayThi = document.querySelector("#dialog_edit input[name='ngayThi']").value;
            const kipThi = document.querySelector("#dialog_edit input[name='kipThi']").value;
            const phongThi = document.querySelector("#dialog_edit input[name='phongThi']").value;

            try {
                const response = await fetch('/classExams', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        classId,
                        teacherId,
                        ngayThi,
                        kipThi,
                        phongThi
                    })
                });

                if (response.ok) {
                    hideDialog_edit();
                    window.location.reload(); // Refresh the page or update UI as needed
                } else {
                    console.error('Failed to add new data');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        // Function to handle updating existing data
        async function updateData() {
            const id = document.querySelector("#dialog_edit input[name='id']").value;
            const classId = document.querySelector("#dialog_edit select[name='classId']").value;
            const teacherId = document.querySelector("#dialog_edit select[name='teacherId']").value;
            const ngayThi = document.querySelector("#dialog_edit input[name='ngayThi']").value;
            const kipThi = document.querySelector("#dialog_edit input[name='kipThi']").value;
            const phongThi = document.querySelector("#dialog_edit input[name='phongThi']").value;

            try {
                const response = await fetch(`/classExams/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        classId,
                        teacherId,
                        ngayThi,
                        kipThi,
                        phongThi
                    })
                });

                if (response.ok) {
                    hideDialog_edit();
                    window.location.reload(); // Refresh the page or update UI as needed
                } else {
                    console.error('Failed to update data');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        // Ensure event binding for add button is done once
        let isAddButtonEventBound = false;
        if (!isAddButtonEventBound) {
            document.getElementById("button_add").addEventListener('click', addNewData);
            isAddButtonEventBound = true;
        }

        // Ensure event binding for edit button is done once
        let isEditButtonEventBound = false;
        if (!isEditButtonEventBound) {
            document.getElementById("button_edit").addEventListener('click', updateData);
            isEditButtonEventBound = true;
        }
    </script>


