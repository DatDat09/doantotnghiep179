                    /* Màu tím chủ đạo */
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color 0.3s;
                    border: 1px solid #ddd;
                    margin: 0 4px;
                    border-radius: 4px;
                }

                .pagination a:hover {
                    background-color: #ddd;
                }

                .pagination a.active {
                    background-color: #6a0dad;
                    color: white;
                    border: 1px solid #6a0dad;
                }
            </style>

            <div class="pagination">
                <% if (typeof totalPages !=='undefined' && totalPages> 1) { %>
                    <a href="?page=<%= currentPage > 1 ? currentPage - 1 : 1 %>&mhp=<%= searchCode %>&thp=<%= searchName %>"
                        class="pagination-link <%= currentPage === 1 ? 'disabled' : '' %>">Previous</a>
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="?page=<%= i %>&mhp=<%= searchCode %>&thp=<%= searchName %>"
                            class="pagination-link <%= currentPage === i ? 'active' : '' %>">
                            <%= i %>
                        </a>
