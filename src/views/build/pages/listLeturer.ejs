        fetch(`/teachers/${id}`, {
          method: 'DELETE',
        })
          .then(response => {
            if (response.ok) {
              // Nếu xóa thành công, làm gì đó (ví dụ: ẩn hộp thoại)
              hideDialog_delete();
              // Refresh lại trang hoặc làm gì đó để cập nhật dữ liệu hiển thị
              window.location.reload();
            } else {
              // Xử lý khi không xóa được dữ liệu
              console.error('Failed to delete data');
            }
          })
          .catch(error => console.error('Error:', error));
      } catch (error) {
        console.error('Error:', error);
      }
    }
  </script>
  <script>
    function showDialog_delete(id) {
      let dialog = document.getElementById("dialog_delete");
      dialog.classList.remove('hidden');

      // Truyền ID vào input ẩn trong hộp thoại xóa
      document.querySelector("#dialog_delete input[name='deleteId']").value = id;
    }

    function hideDialog_delete() {
      let dialog = document.getElementById("dialog_delete");
      dialog.classList.add('hidden')
    }
  </script>


