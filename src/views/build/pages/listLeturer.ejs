      .pagination a,
      .pagination span {
        color: #6a0dad;
        /* Màu tím chủ đạo */
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color 0.3s;
        border: 1px solid #ddd;
        margin: 0 4px;
        border-radius: 4px;
      }

      .pagination a:hover {
        background-color: #ddd;
      }

      .pagination a.active {
        background-color: #6a0dad;
        color: white;
        border: 1px solid #6a0dad;
      }
    </style>

    <div class="pagination">
      <% if (totalPages> 1) { %>
        <% if (currentPage> 1) { %>
          <a href="?page=<%= currentPage - 1 %>" class="pagination-link">Previous</a>
          <% } else { %>
            <span class="pagination-link">Previous</span>
            <% } %>

              <% for (let i=1; i <=totalPages; i++) { %>
                <% if (i===currentPage) { %>
                  <a href="?page=<%= i %>" class="pagination-link active">
                    <%= i %>
                  </a>
                  <% } else { %>
                    <a href="?page=<%= i %>" class="pagination-link">
                      <%= i %>
                    </a>
                    <% } %>
                      <% } %>

                        <% if (currentPage < totalPages) { %>
                          <a href="?page=<%= currentPage + 1 %>" class="pagination-link">Next</a>
                          <% } else { %>
                            <span class="pagination-link">Next</span>
                            <% } %>
                              <% } %>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const activeLink = document.querySelector('[href="?page=<%= currentPage %>"]');
        if (activeLink) {
          activeLink.style.fontWeight = 'bold';
        }
      });
    </script>
