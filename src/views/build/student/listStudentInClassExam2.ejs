        <nav class="relative flex flex-wrap items-center justify-between px-0 py-2 mx-6 transition-all ease-in shadow-none duration-250 rounded-2xl lg:flex-nowrap lg:justify-start"
            navbar-main navbar-scroll="false">
            <div class="flex items-center justify-between w-full px-4 py-1 mx-auto flex-wrap-inherit">
                <nav>
                    <!-- breadcrumb -->
                    <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
                        <li class="text-sm leading-normal">
                            <a class="text-white opacity-50" href="javascript:;">Main</a>
                        </li>
                        <li class="text-sm pl-2 capitalize leading-normal text-white before:float-left before:pr-2 before:text-white before:content-['/']"
                            aria-current="page">ClassExams</li>
                        <li class="text-sm pl-2 capitalize leading-normal text-white before:float-left before:pr-2 before:text-white before:content-['/']"
                            aria-current="page">List Students</li>
                    </ol>
                    <h6 class="mb-0 font-bold text-white capitalize">List Students</h6>
                </nav>

                <ul class="flex flex-row justify-end pl-0 mb-0 list-none md-max:w-full">

                    <li class="flex items-center">
                        <a href="/" id="logoutLink"
                            class="block px-0 py-2 text-sm font-semibold text-white transition-all ease-nav-brand">
                            <i class="fa fa-user sm:mr-1"></i>
                            <span class="hidden sm:inline">Logout</span>
                        </a>
                    </li>
                    <script>
                        document.getElementById('logoutLink').addEventListener('click', async function (event) {
                            event.preventDefault();

                            try {
                                const response = await fetch('/logout', {
                                    method: 'GET',
                                    credentials: 'same-origin'
                                });

                                if (response.ok) {
                                    window.location.href = '/';
                                } else {
                                    alert('Failed to log out. Please try again.');
                                }
                            } catch (error) {
                                console.error('Error during logout:', error);
                                alert('An error occurred during logout. Please try again.');
                            }
                        });
                    </script>

                </ul>
            </div>
