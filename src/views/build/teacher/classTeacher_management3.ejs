                        <script>
                            document.getElementById('search-button').addEventListener('click', function () {
                                const searchInputCode = document.querySelector('input[placeholder="Tìm mã sinh viên"]').value;
                                const searchInputName = document.querySelector('input[placeholder="Tìm tên sinh viên"]').value;
                                // Lấy URL hiện tại
                                const currentURL = window.location.href;

                                // Tạo một đối tượng URL từ URL hiện tại
                                const url = new URL(currentURL);

                                // Lấy tham số từ URL
                                const idClass = url.pathname.split('/').pop(); // Lấy idClass từ đường dẫn URL

                                if (!idClass) {
                                    console.error("idClass is missing from the URL");
                                    return;
                                }

                                url.pathname = `classTeacher/${idClass}/search-studentsT`;
                                url.searchParams.set('page', 1);  // Set default page to 1
                                if (searchInputCode) {
                                    url.searchParams.set('mssv', searchInputCode);
                                }
                                if (searchInputName) {
                                    url.searchParams.set('name', searchInputName);
                                }

                                window.location.href = url.toString();
                            });



                            document.getElementById('reset-button').addEventListener('click', function () {
                                const currentURL = window.location.href;
                                const url = new URL(currentURL);
                                const pathnameParts = url.pathname.split('/');
                                let idClass = null;
                                // Kiểm tra xem nếu đường dẫn URL chứa '/search-students', thì lấy idClass từ phần tử trước đó
                                if (pathnameParts.includes('search-studentsT')) {
                                    const index = pathnameParts.indexOf('search-studentsT');
                                    idClass = pathnameParts[index - 1];
                                } else {
                                    // Nếu không, lấy idClass từ phần tử cuối cùng của đường dẫn URL
                                    idClass = pathnameParts.pop();
                                }
                                window.location.href = `/classTeacher/${idClass}?page=1`;
                            });


