    <script>
        function showDialog_delete(studentId, classId) {
            let dialog = document.getElementById("dialog_delete");
            dialog.classList.remove('hidden');

            // Set the studentId and classId in the hidden inputs
            document.querySelector("#dialog_delete input[name='deleteId']").value = studentId;
            document.querySelector("#dialog_delete input[name='classId']").value = classId;
        }

        function hideDialog_delete() {
            let dialog = document.getElementById("dialog_delete");
            dialog.classList.add('hidden');
        }

        function deleteData() {
            const studentId = document.querySelector("#dialog_delete input[name='deleteId']").value;
            const classId = document.querySelector("#dialog_delete input[name='classId']").value;

            try {
                fetch(`/class/${classId}/student/${studentId}`, {
                    method: 'DELETE',
                })
                    .then(response => {
                        if (response.ok) {
                            hideDialog_delete();
                            window.location.reload();
                        } else {
                            console.error('Failed to delete student from class');
                        }
                    })
                    .catch(error => console.error('Error:', error));
            } catch (error) {
                console.error('Error:', error);
            }
        }

